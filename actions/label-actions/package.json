  "main": "src/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "dev": "echo \"Implement me!\"",
    "test": "NODE_ENV=testing c8 --check-coverage mocha './test/**/*.test.js'",
    "lint": "eslint . --ext .js --cache",
    "posttest": "yarn lint",
    "preship": "yarn test",
