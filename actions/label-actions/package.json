  },
  "devDependencies": {
    "@vercel/ncc": "0.36.0",
    "c8": "7.13.0",
    "eslint": "8.39.0",
    "eslint-plugin-ghost": "2.16.0",
    "mocha": "10.2.0",
    "should": "13.2.3",
    "sinon": "15.0.4"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^9.0.0"
  }
}
